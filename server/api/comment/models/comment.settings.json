{
  "kind": "collectionType",
  "collectionName": "comments",
  "info": {
    "name": "comment"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string",
      "required": true
    },
    "email": {
